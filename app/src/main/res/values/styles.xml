<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--to use the specific font for the all app-->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:fontFamily">@font/montserratregular</item>
    </style>

    <style name="RoundedImageView" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">50%</item>
    </style>

    <!-- Normal (Seçili Olmayan) Sekme Yazı Stili -->
    <style name="TabTextNormal" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Seçili Sekme Yazı Stili -->
    <style name="TabTextSelected" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">30sp</item> <!-- Daha büyük yazı boyutu -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item> <!-- Kalın yapabiliriz (isteğe bağlı) -->
    </style>

</resources>
