<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Uygulamanın Ana Teması -->
    <style name="Theme.PawNav" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Genel Arka Plan Rengi (Beyaz) -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>

        <!-- Renk Ayarları -->
        <item name="colorPrimary">@color/deepSlateBlue</item>
        <item name="colorPrimaryContainer">@color/deepSlateBlue</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/deepSlateBlue</item>
        <item name="colorSecondaryContainer">@color/deepSlateBlue</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Durum Çubuğu ve Navigasyon Bar Renkleri -->
        <item name="android:statusBarColor">@color/darkPlum</item>
        <item name="android:navigationBarColor">@color/deepSlateBlue</item>
        <item name="android:windowLightStatusBar">true</item> <!-- Durum çubuğu simgelerini koyu yapar -->
    </style>

    <!-- Splash Screen Teması -->
    <style name="Theme.PawNav.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="postSplashScreenTheme">@style/Theme.PawNav</item>
    </style>

</resources>
